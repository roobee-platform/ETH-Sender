<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss}] %-5level: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.web3j" level="info" />

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>